        <div class="shipping-progress-bar">
            <div class="shipping-progress-fill" style="width: 0%;"></div>
        </div>
    </div>

    <div class="cart-panel-content">
        <!-- Empty Cart State -->
        <div class="cart-empty-state">
            <h3>Your cart is empty. Start shopping!</h3>

            <div class="cart-category-buttons">
                <a href="{% url 'products' %}?category=women" class="cart-category-btn">SHOP WOMENS</a>
                <a href="{% url 'products' %}?category=men" class="cart-category-btn">SHOP MENS</a>
                <a href="{% url 'products' %}?category=rings" class="cart-category-btn">SHOP SOCKS</a>
                <a href="{% url 'products' %}?category=women&sale=true" class="cart-category-btn">SHOP WOMEN'S
                    SALE</a>
                <a href="{% url 'products' %}?category=men&sale=true" class="cart-category-btn">SHOP MEN'S SALE</a>
            </div>
        </div>

        <!-- Cart Items (when not empty) -->
        <div class="cart-items" style="display: none;">
            <!-- Cart items will be dynamically added here -->
        </div>
    </div>
</div>

