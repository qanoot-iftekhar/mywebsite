/* Top Bar with higher z-index */
.top-bar {
    background-color: var(--dark);
    color: white;
    padding: 8px 0;
    font-size: 0.8rem;
    border-bottom: 1px solid #080808;
    position: relative;
    z-index: 1001;
}

/* Navigation with lower z-index */
.navbar {
    position: relative;
    z-index: 1000;
}

/* Contact Tooltip with highest z-index */
.contact-tooltip-container {
    position: relative;
    display: inline-block;
    cursor: pointer;
    z-index: 1002;
}

.contact-tooltip {
    position: absolute;
    top: 100%;
    right: 0;
    width: 350px;
    background: Beige;
    border: 1px solid #ddd;
    border-radius: 8px;
    box-shadow: 0 10px 30px rgba(236, 233, 226);
    padding: 0;
    z-index: 1003;
    opacity: 0;
    visibility: hidden;
    transform: translateY(-10px);
    transition: all 0.3s ease;
    margin-top: 15px;
}

/* Reset and Base Styles */
* {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
    font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
}

:root {
    --primary: #8B4513;
    /* Saddle Brown */
    --secondary: #654321;
    /* Dark Brown */
    --accent: #A0522D;
    /* Sienna */
    --light: #F5F5DC;
    /* Beige */
    --dark: #2C2C2C;
    /* Almost Black */
    --gray: #777;
    --shadow: 0 4px 12px rgba(0, 0, 0, 0.1);
}

body {
    background-color: #ffffff;
    color: var(--dark);
    line-height: 1.6;
}

.container {
    width: 90%;
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 15px;
}

.btn {
    display: inline-block;
    padding: 12px 24px;
    background-color: var(--primary);
    color: white;
    border: none;
    border-radius: 2px;
    cursor: pointer;
    font-weight: 600;
    text-decoration: none;
    transition: all 0.3s ease;
    text-transform: uppercase;
    font-size: 0.9rem;
    letter-spacing: 1px;
}

.btn:hover {
    background-color: var(--accent);
    transform: translateY(-2px);
}

.btn-outline {
    background-color: transparent;
    border: 2px solid var(--primary);
    color: var(--primary);
}

.btn-outline:hover {
    background-color: var(--primary);
    color: white;
}

section {
    padding: 80px 0;
}

gap: 30px;
}

.category-card {
    background-color: white;
    border-radius: 4px;
    overflow: hidden;
    box-shadow: var(--shadow);
    transition: transform 0.3s;
    border: 1px solid #e0e0e0;
}

.category-card:hover {
    transform: translateY(-10px);
}

.category-img {
    height: 200px;
    background-size: cover;
    background-position: center;
    background-color: #f8f8f8;
    display: flex;
    align-items: center;
    justify-content: center;
}

.category-content {
    padding: 20px;
    text-align: center;
}

.category-content h3 {
    margin-bottom: 10px;
    color: var(--secondary);
    text-transform: uppercase;
    letter-spacing: 1px;
    font-size: 1.1rem;
}

/* Footer */
.footer {
    background-color: var(--dark);
    color: white;
    padding: 60px 0 30px;
}

.reviews-section {
    margin-bottom: 60px;
    text-align: center;
}

.reviews-section h3 {
    font-size: 1.5rem;
    margin-bottom: 30px;
    color: var(--light);
    text-transform: uppercase;
    letter-spacing: 2px;
}

.reviews-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: 30px;
    margin-bottom: 40px;
}

.review-card {
    background-color: rgba(255, 255, 255, 0.1);
    padding: 30px;
    border-radius: 4px;
    text-align: center;
}

.review-card .stars {
    color: #FFD700;
    margin-bottom: 15px;
}

.review-card p {
    font-style: italic;
    margin-bottom: 10px;
    line-height: 1.6;
}

.review-card span {
    color: #ccc;
    font-size: 0.9rem;
}

.footer-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
    gap: 40px;
    margin-bottom: 40px;
}

.footer-col h3 {
    font-size: 1.1rem;
    margin-bottom: 20px;
    color: var(--light);
    text-transform: uppercase;
    letter-spacing: 1px;
}

.footer-col ul {
    list-style: none;
}

.footer-col ul li {
    margin-bottom: 10px;
}

.footer-col ul li a {
    color: #ccc;
    text-decoration: none;
    transition: color 0.3s;
    font-size: 0.9rem;
}

.footer-col ul li a:hover {
    color: var(--primary);
}

.newsletter-form {
    display: flex;
    gap: 10px;
    margin-bottom: 15px;
}

.newsletter-form input {
    flex: 1;
    padding: 10px;
    border: 1px solid #555;
    background: transparent;
    color: white;
    border-radius: 2px;
}

.newsletter-form input::placeholder {
    color: #999;
}

.small-text {
    font-size: 0.8rem;
    color: #999;
    margin-bottom: 15px;
    line-height: 1.4;
}

.social-links {
    display: flex;
    gap: 15px;
}

.social-links a {
    color: white;
    font-size: 1.2rem;
    transition: color 0.3s;
}

.social-links a:hover {
    color: var(--primary);
}

.copyright {
    text-align: center;
    padding-top: 30px;
    border-top: 1px solid #444;
    color: #aaa;
    font-size: 0.8rem;
}

.copyright p {
    margin-bottom: 10px;
}

/* Responsive Styles */
@media (max-width: 768px) {
    .hero h1 {
        font-size: 2.5rem;
    }

    .section-title h2 {
        font-size: 2rem;
    }

    .category-grid {
        grid-template-columns: 1fr;
    }

    .top-bar-content {
        flex-direction: column;
        gap: 10px;
        text-align: center;
    }

    .hero-buttons {
        flex-direction: column;
        align-items: center;
    }

    .footer-grid {
        grid-template-columns: 1fr;
    }
}

/* Contact Tooltip Styles */
.contact-tooltip-container {
    position: relative;
    display: inline-block;
    cursor: pointer;
}

.phone-number {
    cursor: pointer;
    transition: color 0.3s;
    padding: 5px 10px;
    border-radius: 4px;
}

.phone-number:hover {
    color: var(--primary);
    background: rgba(139, 69, 19, 0.1);
}

.contact-tooltip {
    position: absolute;
    top: 100%;
    right: 0;
    width: 350px;
    background: white;
    border: 1px solid #ddd;
    border-radius: 8px;
    box-shadow: 0 10px 30px rgba(0, 0, 0, 0.2);
    padding: 0;
    z-index: 1000;
    opacity: 0;
    visibility: hidden;
    transform: translateY(-10px);
    transition: all 0.3s ease;
    margin-top: 10px;
}

.contact-tooltip-container:hover .contact-tooltip {
    opacity: 1;
    visibility: visible;
    transform: translateY(0);
}

.tooltip-header {
    background: #f8f9fa;
    padding: 15px 20px;
    border-bottom: 1px solid #eee;
    border-radius: 8px 8px 0 0;
}

.tooltip-header h4 {
    color: var(--secondary);
    margin: 0;
    font-size: 1.2rem;
    font-weight: 600;
}

.contact-options {
    padding: 10px 0;
}

.contact-option {
    display: flex;
    align-items: flex-start;
    margin-bottom: 0;
    padding: 12px 20px;
    border-radius: 0;
    transition: background-color 0.3s;
    border: none;
}

.contact-option:hover {
    background-color: #f9f9f9;
}

.contact-icon {
    width: 40px;
    height: 40px;
    background: var(--primary);
    color: white;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    margin-right: 15px;
    flex-shrink: 0;
    font-size: 0.9rem;
}

.contact-info {
    flex: 1;
}

.contact-info strong {
    display: block;
    color: var(--dark);
    margin-bottom: 4px;
    font-size: 0.9rem;
    font-weight: 600;
}

.contact-info p {
    margin: 0 0 8px 0;
    color: var(--gray);
    font-size: 0.8rem;
    line-height: 1.4;
}

.contact-link {
    color: var(--primary);
    text-decoration: none;
    font-size: 0.85rem;
    font-weight: 600;
    display: inline-flex;
    align-items: center;
    transition: color 0.3s;
}

.contact-link:hover {
    color: var(--accent);
}

.contact-link i {
    margin-left: 5px;
    font-size: 0.7rem;
    transition: transform 0.3s;
}

.contact-link:hover i {
    transform: translateX(3px);
}

.tooltip-footer {
    padding: 15px 20px;
    border-top: 1px solid #eee;
    background: #f8f9fa;
    border-radius: 0 0 8px 8px;
    text-align: center;
}

.tooltip-footer p {
    margin: 0;
    font-size: 0.8rem;
    color: var(--gray);
}

.tooltip-footer a {
    color: var(--primary);
    text-decoration: none;
    font-weight: 500;
}

.tooltip-footer a:hover {
    text-decoration: underline;
}

/* Tooltip Arrow */
.contact-tooltip::before {
    content: '';
    position: absolute;
    top: -8px;
    right: 20px;
    width: 16px;
    height: 16px;
    background: white;
    border-left: 1px solid #ddd;
    border-top: 1px solid #ddd;
    transform: rotate(45deg);
    z-index: 1001;
}

/* Mobile Responsive */
@media (max-width: 768px) {
    .contact-tooltip {
        width: 300px;
        right: -50px;
    }

    .contact-tooltip::before {
        right: 60px;
    }

    .top-bar-right {
        flex-direction: column;
        gap: 5px;
    }
}

/* Nav Icons Styling */
.nav-icons {
    display: flex;
    align-items: center;
    gap: 20px;
}

.nav-icons a {
    color: var(--dark);
    font-size: 1.2rem;
    text-decoration: none;
    transition: color 0.3s ease;
    padding: 8px;
}

.nav-icons a:hover {
    color: var(--primary);
}

/* Search Icon Specific */
.nav-icons .fa-search {
    font-size: 1.1rem;
}

/* Cart Icon with Count */
.cart-icon {
    position: relative;
}

.cart-count {
    position: absolute;
    top: -8px;
    right: -8px;
    background: var(--primary);
    color: white;
    border-radius: 50%;
    width: 18px;
    height: 18px;
    font-size: 0.7rem;
    display: flex;
    align-items: center;
    justify-content: center;
}

/* Mobile Menu */
.mobile-menu {
    display: none;
    cursor: pointer;
    font-size: 1.3rem;
}

/* Responsive */
@media (max-width: 768px) {
    .nav-icons {
        gap: 15px;
    }

    .mobile-menu {
        display: block;
    }
}

/* Search Icon - No Border, No Text */
.nav-icons .fa-search {
    font-size: 1.1rem;
    background: none;
    border: none;
    padding: 8px;
}

/* Search link specific styling */
.nav-icons a[href="#"] .fa-search {
    background: transparent !important;
    border: none !important;
}

/* Ensure no input field or text appears */
.search-box {
    display: none !important;
}

/* Remove any search text */
.search-text {
    display: none !important;
}

/* Search Box with Border, Icon and Text */
.search-box {
    display: flex;
    align-items: center;
    border: 1px solid #ddd;
    border-radius: 4px;
    padding: 8px 12px;
    background: white;
    min-width: 200px;
}

.search-box i {
    color: var(--gray);
    margin-right: 8px;
    font-size: 1rem;
}

.search-text {
    color: var(--gray);
    font-size: 0.9rem;
    border: none;
    background: transparent;
    outline: none;
    width: 100%;
}

.search-text::placeholder {
    color: var(--gray);
}

/* Hover effect */
.search-box:hover {
    border-color: var(--primary);
}

.search-box:hover i {
    color: var(--primary);
}

/* Breadcrumb */
.breadcrumb {
    background: #f8f9fa;
    padding: 15px 0;
    font-size: 0.9rem;
    color: var(--gray);
}

.breadcrumb a {
    color: var(--gray);
    text-decoration: none;
}

.breadcrumb span {
    color: var(--primary);
    font-weight: 500;
}

/* Engagement Hero */
.engagement-hero {
    background: linear-gradient(135deg, #8B4513 0%, #654321 100%);
    color: white;
    padding: 100px 0;
    text-align: center;
}

.engagement-hero-content h1 {
    font-size: 3.5rem;
    margin-bottom: 20px;
    text-transform: uppercase;
    letter-spacing: 3px;
    font-weight: 300;
}

.hero-subtitle {
    font-size: 1.2rem;
    max-width: 800px;
    margin: 0 auto 40px;
    line-height: 1.8;
    font-weight: 300;
}

.hero-buttons {
    display: flex;
    gap: 20px;
    justify-content: center;
    flex-wrap: wrap;
}

.hero-buttons .btn {
    padding: 15px 30px;
    font-size: 1rem;
    min-width: 180px;
}

.hero-buttons .btn-outline {
    background: transparent;
    border: 2px solid white;
    color: white;
}

.hero-buttons .btn-outline:hover {
    background: white;
    color: var(--primary);
}

/* Quick Links */
.quick-links {
    padding: 80px 0;
    background: var(--light);
}

.links-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    gap: 30px;
}

.link-card {
    background: white;
    padding: 40px 30px;
    text-align: center;
    border-radius: 8px;
    text-decoration: none;
    color: var(--dark);
    box-shadow: var(--shadow);
    transition: transform 0.3s ease;
}

.link-card:hover {
    transform: translateY(-10px);
    color: var(--dark);
}

.link-icon {
    font-size: 3rem;
    margin-bottom: 20px;
}

.link-card h3 {
    margin-bottom: 10px;
    color: var(--secondary);
    font-size: 1.2rem;
}

.link-card p {
    color: var(--gray);
    margin: 0;
}

/* Featured Collections */
.featured-collections {
    padding: 80px 0;
    text-align: center;
}

.featured-collections h2 {
    font-size: 2.5rem;
    margin-bottom: 50px;
    color: var(--secondary);
    text-transform: uppercase;
    letter-spacing: 2px;
}

.collections-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
    gap: 30px;
}

.collection-card {
    background: white;
    border-radius: 8px;
    overflow: hidden;
    box-shadow: var(--shadow);
    transition: transform 0.3s ease;
}

.collection-card:hover {
    transform: translateY(-5px);
}

.collection-card img {
    width: 100%;
    height: 250px;
    object-fit: cover;
}

.collection-card h3 {
    padding: 20px 20px 10px;
    margin: 0;
    color: var(--secondary);
    font-size: 1.3rem;
}

.collection-card p {
    padding: 0 20px 20px;
    margin: 0;
    color: var(--gray);
}

/* Responsive */
@media (max-width: 768px) {
    .engagement-hero-content h1 {
        font-size: 2.5rem;
    }

    .hero-subtitle {
        font-size: 1.1rem;
        padding: 0 20px;
    }

    .hero-buttons {
        flex-direction: column;
        align-items: center;
    }

    .links-grid {
        grid-template-columns: 1fr;
    }
}